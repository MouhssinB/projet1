# =============================================================================
# CONFIGURATION DE L'APPLICATION GMA TRAINING BOT IHM
# =============================================================================

# =============================================================================
# MODE D'AUTHENTIFICATION
# =============================================================================
# Choisir entre "local" ou "production"
#
# MODE LOCAL (développement uniquement) :
#   - Désactive la vérification SSL pour gauthiq
#   - À utiliser UNIQUEMENT en développement local
#   - Ne JAMAIS utiliser en production
#
# MODE PRODUCTION (déploiement) :
#   - Active la vérification SSL pour gauthiq
#   - Sécurisé et conforme aux standards
#   - À utiliser en production et staging
#
AUTH_MODE=production
# Pour le développement local : AUTH_MODE=local

# =============================================================================
# SÉCURITÉ
# =============================================================================
SECRET_KEY=your-very-long-and-secure-secret-key-here-min-32-chars
SESSION_LIFETIME_HOURS=24
SESSION_COOKIE_NAME=session_simsan
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# =============================================================================
# AZURE OPENAI
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-openai-endpoint.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_M=your-deployment-name-m
AZURE_OPENAI_DEPLOYMENT_N=your-deployment-name-n

# =============================================================================
# OAUTH2 GAUTHIQ
# =============================================================================
GAUTHIQ_CLIENT_ID=your-client-id
GAUTHIQ_CLIENT_SECRET=your-client-secret
GAUTHIQ_DISCOVERY_URL=https://your-gauthiq-server/.well-known/openid-configuration
GAUTHIQ_REDIRECT_URI=https://your-app-domain.com/oauth2callback
GAUTHIQ_HABILITATION=https://your-gauthiq-server
GAUTHIQ_HABILITATION_FILTRE=your-filter-value

# SSL pour Gauthiq (utilisé en mode production uniquement)
# En mode local, cette valeur est ignorée et SSL est automatiquement désactivé
GAUTHIQ_SSL_VERIFY=True

# =============================================================================
# ADMINISTRATEURS
# =============================================================================
# Liste des emails ou usernames séparés par des virgules
LISTE_ADMINS=admin1@example.com,admin2@example.com

# =============================================================================
# AZURE SPEECH (optionnel)
# =============================================================================
AZURE_SPEECH_KEY=your-speech-key
AZURE_SERVICE_REGION=your-service-region
AZURE_SPEECH_ENDPOINT=https://your-speech-endpoint.cognitiveservices.azure.com/

# =============================================================================
# AZURE STORAGE
# =============================================================================
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_CONTAINER_NAME=your-container
AZURE_STORAGE_BASE_BLOB_FOLDER=your-base-folder
AZURE_FILESHARE_NAME=your-fileshare-name
AZURE_FILESHARE_MOUNT_POINT=/mnt/storage

# =============================================================================
# APPLICATION INSIGHTS (optionnel)
# =============================================================================
APPLICATIONINSIGHTS_CONNECTION_STRING=your-application-insights-connection-string

# =============================================================================
# LOGGING
# =============================================================================
PYTHONUNBUFFERED=1
ASYNC_LOG_QUEUE_SIZE=5000
ASYNC_LOG_BATCH_SIZE=50
ASYNC_LOG_FLUSH_INTERVAL=3.0
TAILLE_FICHIERS_MAX_MB_ROTATION=5

# =============================================================================
# SESSION
# =============================================================================
SESSION_TYPE=filesystem
SESSION_FILE_DIR=flask_session/
SESSION_FILE_THRESHOLD=100
SESSION_USE_SIGNER=True
SESSION_PERMANENT=True

# =============================================================================
# SERVEUR
# =============================================================================
PORT=5000
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=600

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
